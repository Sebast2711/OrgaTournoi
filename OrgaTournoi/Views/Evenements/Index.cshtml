@model IEnumerable<OrgaTournoi.Models.Evenement>

@{
    ViewData["Title"] = "Index";
    ViewData["lien"] = "/css/liste.css";
}

<div class="container-fluid gauche-droite">
    <div class="gauche">
        <div class="gauche-haut bg-image" style="background-image:url('https://via.placeholder.com/150');">
            <h2>@Model.First().Nom</h2>
            <h5>@Model.First().jeu.Nom</h5>
        </div>
        <div class="gauche-bas">
            @Html.ActionLink("Voir Details", "Details", "Evenements", new {id=@Model.First().Id})
        </div>
    </div>

    <div class="droite">
        <h2>Liste des tournois</h2>
        <ul class="no-deco">
            @foreach (var evenement in Model.Skip(1)) {
                <li>@Html.ActionLink(evenement.Nom,"Details", "Evenements", new {id=@evenement.Id})</li>
            }
        </ul>
    </div>
</div>




